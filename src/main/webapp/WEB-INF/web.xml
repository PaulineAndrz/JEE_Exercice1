<?xml version="1.0" encoding="UTF-8"?>
<web-app 
  xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0">
  
  <servlet>
  	<servlet-name>CreationClientServlet</servlet-name>
  	<servlet-class>servlets.CreationClientServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>CreationClientServlet</servlet-name>
  	<url-pattern>/creationClient</url-pattern>
  </servlet-mapping>
  
   <servlet>
  	<servlet-name>CreationCommandeServlet</servlet-name>
  	<servlet-class>servlets.CreationCommandeServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>CreationCommandeServlet</servlet-name>
  	<url-pattern>/creationCommande</url-pattern>
  </servlet-mapping>

</web-app>